{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>CreateDateTime</th>
                <td>{{ question.createDateTime ? question.createDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ question.text }}</td>
            </tr>
            <tr>
                <th>TrueAnswer</th>
                <td>{{ question.trueAnswer }}</td>
            </tr>
            <tr>
                <th>WrongAnswer1</th>
                <td>{{ question.wrongAnswer1 }}</td>
            </tr>
            <tr>
                <th>WrongAnswer2</th>
                <td>{{ question.wrongAnswer2 }}</td>
            </tr>
            <tr>
                <th>WrongAnswer3</th>
                <td>{{ question.wrongAnswer3 }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ question.type }}</td>
            </tr>
            <tr>
                <th>AttachmentPath</th>
                <td>{{ question.attachmentPath }}</td>
            </tr>
            <tr>
                <th>Valid</th>
                <td>{{ question.valid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsDeleted</th>
                <td>{{ question.isDeleted ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_question_index') }}">back to list</a>

    <a href="{{ path('app_question_edit', {'id': question.id}) }}">edit</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
