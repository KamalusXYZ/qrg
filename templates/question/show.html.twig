{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <div class="container mt-3 rounded border border-primary bg-light ">
        <h2>Détail de question n° {{ question.id }}</h2>
        <table class="table">
            <tbody>
            <tr>
                <th>Numéro de la question</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ question.createDateTime ? question.createDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Texte de la question</th>
                <td>{{ question.text }}</td>
            </tr>
            <tr>
                <th>Bonne réponse</th>
                <td>{{ question.trueAnswer }}</td>
            </tr>
            <tr>
                <th>Première mauvaise réponse</th>
                <td>{{ question.wrongAnswer1 }}</td>
            </tr>
            <tr>
                <th>Deuxieme mauvaise réponse</th>
                <td>{{ question.wrongAnswer2 }}</td>
            </tr>
            <tr>
                <th>Troisième mauvaise réponse</th>
                <td>{{ question.wrongAnswer3 }}</td>
            </tr>
            <tr>
                <th>Type de question</th>
                <td>{{ question.type }}</td>
            </tr>
            <tr>
                <th>Fichier attaché à la question (image, vidéo, audio, etc...</th>
                <td>{{ question.attachmentPath }}</td>
            </tr>
            <tr>
                <th>Validé</th>
                <td>{{ question.valid ? 'Yes' : 'No' }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('app_question_edit', {'id': question.id}) }}">Modfier</a>

        {{ include('question/_delete_form.html.twig') }}
    </div>
    <div class="container">
        <img src="{{ asset('uploads/images/' ~ question.attachmentPath) }}" alt="image">
    </div>
{% endblock %}
