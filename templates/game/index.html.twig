{% extends 'base.html.twig' %}

{% block title %}Game index{% endblock %}

{% block body %}
    <h1>Game index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreateDateTime</th>
                <th>EndDateTime</th>
                <th>PlayerScore</th>
                <th>IsDeleted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for game in games %}
            <tr>
                <td>{{ game.id }}</td>
                <td>{{ game.createDateTime ? game.createDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ game.endDateTime ? game.endDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ game.playerScore }}</td>
                <td>{{ game.isDeleted ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_game_show', {'id': game.id}) }}">show</a>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_game_new') }}">Create new</a>
{% endblock %}
