{% extends 'base.html.twig' %}

{% block title %}Answer{% endblock %}

{% block body %}
    <h1>Answer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ answer.id }}</td>
            </tr>
            <tr>
                <th>SubmittedDateTime</th>
                <td>{{ answer.submittedDateTime ? answer.submittedDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Result</th>
                <td>{{ answer.result ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ChosenType</th>
                <td>{{ answer.chosenType }}</td>
            </tr>
            <tr>
                <th>WrittenText</th>
                <td>{{ answer.writtenText }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_answer_index') }}">back to list</a>

    <a href="{{ path('app_answer_edit', {'id': answer.id}) }}">edit</a>

    {{ include('answer/_delete_form.html.twig') }}
{% endblock %}
